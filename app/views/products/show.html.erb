
<div class="screen-wrap">
  <br>
  <div>
    <% if flash[:notice] %>
      <div class="notice"><%= flash[:notice] %></div>
    <% end %>
    <% if flash[:alert] %>
      <div class="alert"><%= flash[:alert] %></div>
    <% end %>
  </div>
  <div class="table-container">
    <table class="content-table">
      <thead>
      <tr class="active-row">
        <th >ASIN</th>
        <th >Rank</th>
        <th >Category</th>
        <th >Dimensions</th>
      </tr>
      </thead>
      <tr class="active-row">
          <td ><%= @product.asin %></td>
          <td ><%= @product.rank %></td>
          <td ><%= @product.category %></td>
          <td ><%= @product.dimensions %></td>
        </tr>
    </table>
  </div>
</div>
<%= link_to "Home", products_url, class: 'button' %>


